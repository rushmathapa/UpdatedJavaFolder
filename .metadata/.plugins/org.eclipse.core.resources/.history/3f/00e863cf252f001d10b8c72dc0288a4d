import java.util.Scanner;

public class ArrayAdd {

	public static void main(String[] args) {
		System.out.println("Enter first array numbers");
		Scanner scan = new Scanner (System.in);
		int[]firstArray = {0,1,2,3};
		int[]secondArray = {4,5};
		
		int a = firstArray.length;
		int b = secondArray.length;
		
		int[]result = new int[a + b]; //totallength array of first and second
		for (int i = 0;  i <=result.length; i++) {
			result[i] = firstArray[0] + secondArray[0];
			
		}
	}

}
